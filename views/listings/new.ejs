<% layout("/layouts/boillerplate.ejs") %>
    <div class="row">
        <div class="col-7 offset-3">
     <h3>Create new listings </h3>
    <form action="/listings" method="post">
        <div>
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" placeholder="enter title" class="form-control">    
        </div>

       <div>
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]"  class="form-control"></textarea><br>
       </div>

       <div>
        <label for="image" class="form-label">Image</label>
        <input type="text" name="listing[image]" placeholder="enter image link" class="form-control"><br>
       </div>
        
       <div class="row">
        <div class="col-md-4">
            <label for="price" class="form-label">Price</label>
            <input type="number" name="listing[price]" placeholder="1200" class="form-control"><br>
           </div>
              
           <div class="col-md-8">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="listing[location]" placeholder="India" class="form-control"><br>
           </div>
       </div>

       <div>
        <label for="location" class="form-label">Location</label>
        <input type="text" name="listing[country]" placeholder="sarkanda , bilasur" class="form-control"><br>
       </div >
        <button class="btn btn-dark mb-2 edit-btn"> Add </button>
    </form>
  </div>
</div>